<main class="d-flex flex-column align-items-center w-100 flex-grow-1">
  <h1 class="bg-dark-subtle p-3 text-center text-dark w-100 mb-4">LISTA DE PRODUCTOS</h1>
  <section class="container my-4">
  <div class="row">
    {{#each products}}
      <div class="col-md-4 d-flex justify-content-center mb-4">
        <div class="card text-center border-0 shadow-sm" style="width: 18rem;">
          <img src="{{this.image}}" class="card-img-top" alt="{{this._id}}" style="height: 12rem; object-fit: cover;">
        <div class="card-body text-center p-3">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text p-2">USD {{this.price}}</p>
          <a href="/product/{{this._id}}" class="btn btn-primary p-1">+INFO</a>
        </div>
        </div>
      </div>
    {{/each}}
  </div>
</section>

</main>