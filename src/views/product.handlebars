<main class="d-flex justify-content-center align-items-center" style="height: 100vh; width: 100vw; overflow: hidden;">
  <div class="card border-0 shadow-lg" style="max-width: 700px; width: 100%;">
    <img src="{{product.image}}" class="card-img-top pt-5" alt="{{product.title}}" style="width: 100%; height: auto; max-height: 350px; object-fit: contain;"/>
    <div class="card-body text-center px-4 py-4">
      <h3 class="card-title">{{product.title}}</h3>
      <p class="text-muted">Categoria: {{product.category}}</p>
      <p class="text-muted">Descripcion: {{product.description}}</p>
      <p class="text-muted">Disponibles: {{product.stock}}</p>
      <h4 class="text-success">Precio: ${{product.price}}</h4>

      <div class="d-flex justify-content-center align-items-center gap-2 mt-3">
        <input type="number" id="quantity" min="1" max="{{product.stock}}" value="1" class="form-control form-control-sm" style="width: 80px;"
        />
        <button class="btn btn-primary btn-sm" id="addToCart" data-pid="{{product._id}}" data-stock="{{product.stock}}">
          Agregar al carrito
        </button>
      </div>
    </div>
  </div>
</main>

<script type="module" src="/scripts/product.js"></script>